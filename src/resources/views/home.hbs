<main
	class='px-14 py-8 min-h-screen w-full bg-gray-900'
	x-data='{ articles: {{json articles}} }'
>
	<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
		<template x-for='article in articles' :key='article._id'>
			<article
				class='bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105 focus-within:ring-2 focus-within:ring-blue-500 flex flex-col h-full'
			>
				<img
					:src="article.image + '&auto=format&fit=crop&w=1470&q=80'"
					alt='Laptop on a wooden desk'
					class='w-full h-48 object-cover'
				/>
				<div class='p-6 flex flex-col flex-grow'>
					<h2
						class='text-xl font-semibold text-white mb-2'
						x-text='article.title'
					></h2>
					<p
						class='text-gray-300 mb-4 flex-grow'
						x-text='article.description'
					></p>
					<div
						class='flex items-center justify-between text-sm text-gray-400 mb-4'
					>
						<span x-text='article.author'></span>
						<span x-text='article.createdAtFormatted'></span>
					</div>
					<a :href="'/articles/' + article.slug">
						<button
							class='bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors duration-300'
						>Read More</button>
					</a>
				</div>
			</article>
		</template>
	</div>
</main>
